# ZERØ MERIDIAN — Cloudflare Pages Headers (push98)
# Prevent stale SW / stale JS setelah deploy baru

# Service Worker — never cache
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
  Service-Worker-Allowed: /

# HTML — always revalidate
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# JS/CSS/WASM build artifacts — immutable (Vite hash di filename)
/assets/*.js
  Cache-Control: public, max-age=31536000, immutable
/assets/*.css
  Cache-Control: public, max-age=31536000, immutable
/wasm/*.wasm
  Cache-Control: public, max-age=31536000, immutable

# Images / icons
/logo-*.png
  Cache-Control: public, max-age=86400
/*.png
  Cache-Control: public, max-age=86400
/*.ico
  Cache-Control: public, max-age=86400

# manifest.json — revalidate
/manifest.json
  Cache-Control: public, max-age=0, must-revalidate

# Security headers untuk semua route
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN
  Referrer-Policy: strict-origin-when-cross-origin
  Cross-Origin-Opener-Policy: same-origin
